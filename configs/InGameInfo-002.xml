<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<config>
    <lines at="topleft">
        <line>
            <str>$fDay {day}, {mctime} (</str>
            <if>
                <var>daytime</var>
                <str>$eDay</str>
                <str>$8Night</str>
            </if>
            <str> time$f)</str>
        </line>
        <line>
            <str>Biome: $e{biome}$f</str>
            <if>
                <var>slimes</var>
                <str> ($aSlime$f)</str>
                <str/>
            </if>
        </line>
        <line>
            <str>Score: $e{score}$f</str>
        </line>
        <line>
            <str>Light: </str>
            <max>
                <var>light</var>
                <num>7.5</num>
                <str>$e</str>
                <str>$c</str>
            </max>
            <var>light</var>
            <str>$r (feet: </str>
            <max>
                <var>lightfeet</var>
                <num>7.5</num>
                <str>$e</str>
                <str>$c</str>
            </max>
            <var>lightfeet</var>
            <str>$r)</str>
        </line>
        <line>
            <str>$fEXP: $e{xpthislevel}$f \/ $e{xpcap}$f ($e</str>
            <round>
                <pct>
                    <var>xpthislevel</var>
                    <var>xpcap</var>
                </pct>
                <num>0</num>
            </round>
            <str>%$f)</str>
        </line>
        <line>
            <str>FPS: </str>
            <max>
                <var>fps</var>
                <num>30</num>
                <str>$a</str>
                <str>$c</str>
            </max>
            <var>fps</var>
        </line>
        <line>
            <str>Entities: $e{entitiesrendered}$f \/ $e{entitiestotal}$f</str>
        </line>
    </lines>
    <lines at="topcenter">
        <line>
            <str>$b{username}$f</str>
        </line>
    </lines>
    <lines at="topright">
        <line>
            <var>equippedname</var>
            <max>
                <var>equippeddamageleft</var>
                <num>0.5</num>
                <str>: </str>
                <str/>
            </max>
            <max>
                <pct>
                    <var>equippeddamageleft</var>
                    <var>equippedmaxdamage</var>
                </pct>
                <num>10</num>
                <max>
                    <pct>
                        <var>equippeddamageleft</var>
                        <var>equippedmaxdamage</var>
                    </pct>
                    <num>20</num>
                    <max>
                        <pct>
                            <var>equippeddamageleft</var>
                            <var>equippedmaxdamage</var>
                        </pct>
                        <num>50</num>
                        <str>$e</str>
                        <str>$6</str>
                    </max>
                    <str>$c</str>
                </max>
                <str>$4</str>
            </max>
            <max>
                <var>equippeddamageleft</var>
                <num>0.5</num>
                <str>{equippeddamageleft}$f \/ $e{equippedmaxdamage}</str>
                <str/>
            </max>
        </line>
    </lines>
</config>
